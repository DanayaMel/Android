<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.danaya.pickersintentsandmenus.MainActivity">

    <TextView
        android:id="@+id/textView_ChooseDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_date_time"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_alignParentStart="true"
            android:text="@string/date"
            android:onClick="showDatePickerDialog"/>
        <Button
            android:id="@+id/button_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_toEndOf="@id/button_date"
            android:text="@string/time"
            android:onClick="showTimePickerDialog"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/textView_DisplayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginBottom="@dimen/margin_vertical"/>
    <TextView
        android:id="@+id/textView_DisplayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginBottom="@dimen/margin_vertical"/>

    <Button
        android:id="@+id/button_next_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_go_to_order_activity"
        android:background="@color/colorAccent"
        android:padding="@dimen/padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:visibility="invisible"
        />
</LinearLayout>